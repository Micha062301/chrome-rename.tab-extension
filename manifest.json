{
  "manifest_version": 3,
  "name": "Tab Labeler",
  "version": "1.0",
  "description": "Rename any tab and keep the name persistent.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rename Tab"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
